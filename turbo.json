{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NEXT_PUBLIC_MOCKING_ENABLED",
    "NEXT_PUBLIC_API_SERVER",
    "NEXT_PUBLIC_MOCKING_API_SERVER",
    "NEXTAUTH_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env",
        ".env.*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "start": {
      "dependsOn": [
        "build"
      ]
    }
  }
}
